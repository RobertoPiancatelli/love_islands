<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @order.booking.island.image_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.booking.created_at.to_date %></li>
        <li><strong>ISLAND</strong> <%= @order.booking.island.name %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
    </div>
  </div>
</div>