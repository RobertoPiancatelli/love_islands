<div class="container">
<h1>Your details summary for your booking:</h1>
<p><%= @booking.island.name %> island</p>
<p>Check-in date: <%= @booking.check_in.strftime("%d %b, %Y") %></p>
<p>Check-out date: <%= @booking.check_out.strftime("%d %b, %Y") %></p>
<p>Total: Â£<%= (@booking.check_out - @booking.check_in).to_i * @booking.island.price_cents %></p>
<!-- <div id="book-button"><%= link_to 'Leave Review', new_booking_review_path(@booking) %></div>
<br> -->
<h2>Proceed to payment if the details above are correct</h2>
  <%= form_tag booking_orders_path(params[:id]) do %>
    <%= hidden_field_tag 'booking_id', @booking.id %>
    <%= submit_tag 'Check out', class: 'btn btn-primary' %>
  <% end %>
<br>
<%= link_to 'Back to Island', island_path(@booking.island) %>
</div>

<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @booking.island.image_url, width: '100%' %></div>
    <div class="col">
      <h1>Checkout summary</h1>
      <p>Purchase of <strong><%= @booking.island.name %></strong> for <strong><%= humanized_money_with_symbol @order.amount %></strong></p>
      <button id="pay" class="btn btn-primary">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
