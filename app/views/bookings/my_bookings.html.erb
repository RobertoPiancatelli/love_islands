

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>My Bookings</h1>
        <% @bookings.each do |booking|%>
          <li><h3><%= booking.island.name%></h3></li>
          <li><%= booking.check_in%></li>
          <li><%= booking.check_out%></li>
          <li><p>Number of nights: <%= (booking.check_out - booking.check_in).to_i%></li></p>
          <li><%= booking.guests%></li>
          <li><%= booking.island_id%></li>
          <li><%= booking.total_price%></li>
          <hr>
<% end %>

<%= link_to 'Back', islands_path, class: "btn btn-primary" %>
</div>
  </div>
</div>